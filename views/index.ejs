<%- include('partials/header') %>

<section class="hero">
  <h2>Capturing Life's Colorful Moments</h2>
  <p>Welcome to Eze's Photography, where we turn your memories into art!</p>
  <img
    src="/images/hero1.png"
    alt="Colorful photography scene"
    class="hero-image"
  />
  <a href="/bookEvent"
    ><button class="signin-btn">
      book session <img src="images/book.svg" /></button
  ></a>
  <button class="nav-button prev-button">&larr;</button>
  <button class="nav-button next-button">&rarr;</button>

  <div class="chatbot-container">
    <button id="chatbot-toggle" class="chatbot-toggle">
      <svg class="chat-icon" viewBox="0 0 24 24" width="24" height="24">
        <path
          fill="currentColor"
          d="M20,2H4C2.9,2,2,2.9,2,4v18l4-4h14c1.1,0,2-0.9,2-2V4C22,2.9,21.1,2,20,2z M19,13l-2-2h-6l-2,2H7V5h12V13z"
        />
      </svg>
      <svg class="close-icon" viewBox="0 0 24 24" width="24" height="24">
        <path
          fill="currentColor"
          d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
        />
      </svg>
    </button>
    <div id="chatbot-popup" class="chatbot-popup"></div>
  </div>
</section>

<section class="features">
  <div class="feature">
    <h3>Vibrant Portraits</h3>
    <p>Bring out your true colors with our lively portrait sessions.</p>
    <img src="images/pot1.jpg" alt="Vibrant portrait" class="feature-image" />
  </div>
  <div class="feature">
    <h3>Whimsical Weddings</h3>
    <p>We add a touch of magic to your special day.</p>
    <img
      src="images/pot2.jpg"
      alt="Whimsical wedding photo"
      class="feature-image"
    />
  </div>
  <div class="feature">
    <h3>Playful Pet Pics</h3>
    <p>Capture your furry friends in all their adorable glory.</p>
    <img src="images/pet2.png" alt="Playful pet photo" class="feature-image" />
  </div>
  <script src="javascripts/script2.js"></script>
</section>

<%- include('partials/footer') %>
